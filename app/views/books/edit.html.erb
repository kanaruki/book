
<html>
    <h1>Editing Book</h1>

     <% if @book.errors.any? %>
      <%= @book.errors.count %>errors have occurred
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
     <% end %>
     <% end %>


     <%= form_with model:@book,url:book_path(@book), local:true do |f| %>
     <h4>title</h4>
     <%= f.text_field :title %>
     <h4>body</h4>
     <%= f.text_field :body %>
     <div class="botan"><%= f.submit 'Update Book' %></div>
     <% end %>
     <%= link_to "Show", book_path %>
     <%= link_to "Back", books_path %>

</html>