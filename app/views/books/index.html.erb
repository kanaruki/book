<!DOCTYPE>
<html>
    <head>
     <title>Kadai</title>
      <link rel="stylesheet" media="all" href="/../../../assets/stylesheets/books.scss">
    </head>

    <body>

     <header>
     <h1>Books</h1>
     </header>

     <table>
       <thed>
         <tr>
          <th>Title</th>
          <th>Body</th>
         </tr>
       </thed>
       <tbody>
         <% @books.each do |book| %>
           <tr>
             <td class="title"><%= book.title %></td>
             <td class="body"><%= book.body %></td>
             <td><%= link_to "Show", book_path(book.id) %></td>
             <td><%= link_to "edit", edit_book_path(book.id) %></td>
             <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
           </tr>
         <% end %>
       </tbody>
     </table>

     <h2>New book</h2>
     <% if @book.errors.any? %>
     <%= @book.errors.count %>errors have occurred
     <% @book.errors.full_messages.each do |message| %>
     <%= message %>
     <% end %>
     <% end %>

     <%= form_with model: @book, local:true do |f| %>
     <h4>title</h4>
     <%= f.text_field :title %>
     <h4>body</h4>
     <%= f.text_field :body %>
     <div class="botan"><%= f.submit 'Create Book' %></div>
     <% end %>
    </body>

</html>